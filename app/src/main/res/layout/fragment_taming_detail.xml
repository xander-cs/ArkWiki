<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/ko_title_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            tools:text="%s"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:id="@+id/ko_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="%s"
            app:layout_constraintTop_toBottomOf="@id/ko_title_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_margin="20dp"
            />

        <TextView
            android:id="@+id/nv_title_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ko_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            tools:text="%s"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:id="@+id/nv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            app:layout_constraintTop_toBottomOf="@id/nv_title_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_margin="20dp" />

        <TextView
            android:id="@+id/unv_title_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/nv_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            tools:text="%s"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:id="@+id/unv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="%s"
            app:layout_constraintTop_toBottomOf="@id/unv_title_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_margin="20dp"
            />

        <TextView
            android:id="@+id/tt_title_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/unv_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            tools:text="%s"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:id="@+id/tt_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="%s"
            app:layout_constraintTop_toBottomOf="@id/tt_title_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_margin="20dp"
            />

        <TextView
            android:id="@+id/ro_title_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tt_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            tools:text="%s"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:id="@+id/ro_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="%s"
            app:layout_constraintTop_toBottomOf="@id/ro_title_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="128dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
